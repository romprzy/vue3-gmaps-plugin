{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/vue3-gmaps-plugin/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "declaration": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "outDir": "dist",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/vue3-gmaps-plugin/**/*.ts", "src/vue3-gmaps-plugin/**/*.tsx", "src/vue3-gmaps-plugin/**/*.vue"],
  "exclude": ["src/examples/"]
}
